<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->

    <item android:id="@android:id/background">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/offWhite"
                    android:centerColor="@color/offWhite"
                    android:centerY="1.0"
                    android:endColor="@color/offWhite"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/defaultButtonColor"
                    android:centerColor="@color/defaultButtonColor"
                    android:centerX="0.5"
                    android:endColor="@color/defaultButtonColor"
                    />
            </shape>
        </clip>
    </item>
</layer-list>