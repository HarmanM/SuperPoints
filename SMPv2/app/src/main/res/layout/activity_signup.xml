<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@color/defaultButtonColor">

    <TextView
        android:id="@+id/UsernameTextView"
        android:layout_width="71dp"
        android:layout_height="28dp"
        android:layout_alignEnd="@+id/confirmTextView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/champagnebold"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:theme="@style/EditTextWhite"
        app:layout_constraintBottom_toTopOf="@+id/passwordTextView"
        app:layout_constraintEnd_toStartOf="@+id/usernameEditText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPassword"
        android:theme="@style/EditTextWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/passwordTextView"
        app:layout_constraintTop_toBottomOf="@+id/usernameEditText" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="228dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@+id/loginTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="87dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="171dp"
        android:background="@drawable/btn_rounded_white"
        android:fontFamily="@font/theboldfont"
        android:onClick="register"
        android:text="Sign Up"
        android:textColor="@color/defaultButtonColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmEditText" />


    <EditText
        android:id="@+id/confirmEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="22dp"
        android:layout_toEndOf="@+id/passwordTextView"
        android:ems="10"
        android:inputType="textPassword"
        android:theme="@style/EditTextWhite"
        app:layout_constraintBottom_toTopOf="@+id/signupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/confirmTextView"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />


    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="68dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/usernameEditText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/logoImageView"
        android:text="Password"
        android:fontFamily="@font/champagnebold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/confirmTextView"
        app:layout_constraintEnd_toStartOf="@+id/passwordEditText"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UsernameTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/confirmEditText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="158dp"
        android:text="Sign Up"
        android:fontFamily="@font/theboldfont"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/usernameEditText"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="29dp"
        android:text="Confirm Password"
        android:fontFamily="@font/champagnebold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/confirmEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView" />


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addressTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/EditTextWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addressTextView"
        app:layout_constraintTop_toBottomOf="@+id/loginTextView" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="298dp"
        android:layout_height="37dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmTextView"
        app:layout_constraintVertical_bias="0.32"
        >

        <RadioButton
            android:id="@+id/userRB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:text="User"
            app:layout_constraintEnd_toStartOf="@+id/businessRB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmTextView"
            android:fontFamily="@font/champagnebold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/businessRB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:text="Business"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userRB"
            app:layout_constraintTop_toBottomOf="@+id/confirmEditText"
            android:fontFamily="@font/champagnebold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </RadioGroup>
</android.support.constraint.ConstraintLayout>