<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/defaultButtonColor">

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="87sp"
        android:ems="10"
        android:inputType="text"
        android:theme="@style/EditTextWhite"
        app:layout_constraintBottom_toTopOf="@+id/postalEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailTextView"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <EditText
        android:id="@+id/postalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/submitButton"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:theme="@style/EditTextWhite"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/postalTextView"
        app:layout_constraintTop_toBottomOf="@+id/cityEditText" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="142sp"
        android:layout_height="63sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121sp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="121sp"
        android:layout_marginBottom="70dp"
        android:onClick="login"
        android:text="Submit"
        android:textSize="22sp"
        android:fontFamily="@font/theboldfont"
        android:textColor="@color/defaultButtonColor"
        android:background="@drawable/btn_rounded_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postalEditText" />


    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="31sp"
        android:layout_alignLeft="@+id/cityEditText"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="37dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="16dp"
        android:text="Username"
        android:fontFamily="@font/champagnebold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/postalTextView"
        app:layout_constraintEnd_toStartOf="@+id/cityEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/postalTextView"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignRight="@+id/postalEditText"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="332sp"
        android:layout_marginBottom="168dp"
        android:layout_toLeftOf="@+id/postalEditText"
        android:hapticFeedbackEnabled="false"
        android:text="Password"
        android:fontFamily="@font/champagnebold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="228sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="73sp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="73sp"
        android:layout_marginBottom="30sp"
        app:layout_constraintBottom_toTopOf="@+id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@drawable/logo3" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="145sp"
        android:text="Log In"
        android:textColor="@color/white"
        android:fontFamily="@font/theboldfont"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/cityEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>