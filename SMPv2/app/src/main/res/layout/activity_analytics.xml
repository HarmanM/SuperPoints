<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Analytics">

    <TextView
        android:id="@+id/avgVisitsPerWeekTextView"
        android:layout_width="136dp"
        android:layout_height="42dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="27dp"
        android:text="Average Visits per day this week:"
        app:layout_constraintEnd_toStartOf="@+id/avgVisitsResultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/avgVisitsResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="163dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avgVisitsPerWeekTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/avgDurationTextView"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="Average duration of stay per visit:"
        app:layout_constraintEnd_toStartOf="@+id/avgDurationResultTextView"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avgVisitsPerWeekTextView" />

    <TextView
        android:id="@+id/avgDurationResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avgDurationTextView"
        app:layout_constraintTop_toBottomOf="@+id/avgVisitsResultTextView" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </com.github.mikephil.charting.charts.PieChart>

</android.support.constraint.ConstraintLayout>