<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bcit.smpv2">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sp_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".BusinessSettingsActivity"
            android:screenOrientation="sensorPortrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="MyChannel" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SignupActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".BusinessDashboard"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MapsActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name=".Analytics" />
        <activity
            android:name=".BusinessSignup"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".UserPointsActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".WelcomeActivity"
            android:screenOrientation="sensorPortrait" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />

        <activity
            android:name=".DetailedDescription"
            android:screenOrientation="sensorPortrait"></activity>
        <activity android:name=".AdministratorDashboard"></activity>
    </application>

</manifest>